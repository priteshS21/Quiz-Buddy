<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/greenbackground">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/black_overlay"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/scoreView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:background="@drawable/life"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="370dp" />

                <TextView
                    android:id="@+id/lifeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bubblegum_sans"
                    android:text="Life"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="370dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/scoreView"
                    android:layout_toStartOf="@+id/scoreView"
                    android:layout_toLeftOf="@+id/scoreView"
                    android:layout_weight="1"
                    android:background="@drawable/score"
                    tools:layout_editor_absoluteX="347dp"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/scoreView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/bubblegum_sans"
                    android:text="Score"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    tools:layout_editor_absoluteX="372dp"
                    tools:layout_editor_absoluteY="0dp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/correct" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="Correct Answer!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff198012"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#FF3ECB34"
            android:fontFamily="@font/bubblegum_sans"
            android:onClick="intentact"
            android:text="Proceed"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="553dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@drawable/score" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:fontFamily="@font/bubblegum_sans"
                android:text=" +10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff198012"
                android:textSize="25sp" />
        </RelativeLayout>


    </RelativeLayout>
</layout>